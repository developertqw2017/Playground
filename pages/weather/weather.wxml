            <image src="/img/scenic/wuhanhuanlegu/wuhanhuanlegu.jpg"></image>
          </view>
          <view class="cart-info-container">
            <text class="food-name">武汉欢乐谷</text>
            <view>
              <block class="marks" wx:for="{{[1, 2, 3, 4, 5]}}" >
                <image class="mark" src="../../img/scenic.jpg"></image>
